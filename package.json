{
  "name": "slim-rat",
  "title": "Slim RAT",
  "productName": "Slim RAT",
  "description": "A fast and light-weight remote administration tool.",
  "license": "MIT",
  "version": "1.0.0",
  "main": "main.js",
  "homepage": "https://github.com/abrahamcarvalhoo/slim-rat",
  "author": {
    "name": "Abraham Carvalho",
    "email": "abraham.carvalhoo@gmail.com",
    "url": "http://abrahamcarvalhoo.github.io"
  },
  "keywords": [
    "nodejs",
    "npm",
    "electron",
    "socketio",
    "angularjs",
    "remote-administrator-tool"
  ],
  "repository": {
    "type": "git",
    "url": "git@github.com:abrahamcarvalhoo/slim-rat"
  },
  "bugs": {
    "url": "https://github.com/abrahamcarvalhoo/slim-rat/issues"
  },
  "scripts": {
    "start": "electron .",
    "clean": "rm -rf ./dist",
    "dist": "electron-builder",
    "pack": "electron-builder --dir",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "appId": "com.slimrat",
    "files": [
      "app/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "app/assets/images"
    },
    "mac": {
      "category": "public.app-category.utilities"
    },
    "dmg": {
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 240,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "category": "Utility",
      "target": [
        "deb",
        "AppImage"
      ]
    },
    "win": {
      "target": "nsis"
    }
  },
  "engines": {
    "node": ">=0.12"
  },
  "devDependencies": {
    "electron": "^1.7.10",
    "electron-builder": "^19.52.1",
    "electron-packager": "^10.1.1"
  },
  "dependencies": {
    "angular": "^1.6.8",
    "angular-route": "^1.6.8",
    "fs-extra": "^5.0.0",
    "geoip-lite": "^1.2.1",
    "homedir": "^0.6.0",
    "ng-infinite-scroll": "^1.3.0",
    "socket.io": "^2.0.4"
  }
}
